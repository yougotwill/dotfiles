# Set personal aliases, overriding those provided by oh-my-zsh libs,
# plugins, and themes. Aliases can be placed here, though oh-my-zsh
# users are encouraged to define aliases within the ZSH_CUSTOM folder.
# For a full list of active aliases, run `alias`.

alias aliases='${EDITOR} ~/.aliases'
alias functions='${EDITOR} ~/.functions'

# brew
alias b='brew'
alias boutdated='brew update && brew outdated --greedy'
alias brm='brew rmtree'
alias bupgrade='brew upgrade --cask --greedy && brew upgrade'
alias bcleanup='brew cleanup && brew autoremove'
alias bbackup-taps='cd ~ && rm Brewfile-taps && brew bundle dump --taps --file Brewfile-taps'
alias bbackup-brews='cd ~ && rm Brewfile-brews && brew bundle dump --brews --file Brewfile-brews'
alias bbackup-casks='cd ~ && rm Brewfile-casks && brew bundle dump --casks --file Brewfile-casks'
alias bbackup-mas='cd ~ && rm Brewfile-mas && brew bundle dump --mas --file Brewfile-mas'
alias bbackup-vscode='cd ~ && rm Brewfile-vscode && brew bundle dump --vscode --file Brewfile-vscode'
alias bbackup='bbackup-taps && bbackup-brews && bbackup-casks && bbackup-mas && bbackup-vscode'
alias brestore-taps='cd ~ && brew bundle --file Brewfile-taps'
alias brestore-brews='cd ~ && brew bundle --file Brewfile-brews'
alias brestore-casks='cd ~ && brew bundle --file Brewfile-casks'
alias brestore-mas='cd ~ && brew bundle --file Brewfile-mas'
alias brestore-vscode='cd ~ && brew bundle --file Brewfile-vscode'
alias brestore='brestore-taps && brestore-brews && brestore-casks && brestore-mas && brestore-vscode'

# cmus
alias cmux='tmux new-session -A -D -s cmus cmus'
alias cmus-control='brew services restart cmus-control'
alias cmus-status='cmus-remote -Q'
alias cmus-play='cmus-remote -p'
alias cmus-pause='cmus-remote -u'

# configs
alias rr='exec $SHELL'
alias zshrc="${EDITOR} ~/.zshrc"
alias ohmyzsh="${EDITOR} ~/.oh-my-zsh"
alias vimrc="${EDITOR} ~/.vimrc"
alias vimplugs="cd /Users/neon/.config/nvim/plugged"
alias tmuxconf="${EDITOR} ~/.tmux.conf"
alias keyboardconfig="${EDITOR} ~/.config/karabiner/karabiner.json"

# dotfiles backup
alias config='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'
alias config-install='chmod 755 ~/bin/dotfiles-install.sh && dotfiles-install.sh'
alias config-backup='bbackup && rm requirements.txt && pip freeze > requirements.txt && rm pipx.requirements.txt && pipx-export && bkg backup'

# file navigation
alias ls='eza'
alias la='ls -la'
alias ll='ls -l --time-style=long-iso'
alias lsg='ls --grid'
alias lsga='ls -a --grid'
alias lki='lk --icons'

# folder navigation
alias appsupport='cd ~/Library/Application\ Support'
alias desk='cd ~/Desktop'
alias down='cd ~/Downloads'
alias prj='cd ~/work/projects/'

# git
alias g='git'
alias ga='git add'
alias gaa='git add -all'
alias gb='git branch'
alias gc='git commit'
alias gc!='git commit -v --amend'
alias gcl='git clean -i'
alias gcm='git checkout $(git_main_branch)'
alias gcd='git checkout $(git_develop_branch)'
alias gch='git checkout'
alias gd='git diff --patch-with-stat'
alias gdc='git diff --patch-with-stat --cached'
alias gf='git fetch'
alias gfa='git fetch --all'
alias gfo='git fetch origin'
alias gfu='git fetch upstream'
alias gl='git pull'
alias glo='git pull origin'
alias glu='git pull upstream'
alias gp='git push'
alias gpo='git push origin'
alias gpou='git push --set-upstream origin'
alias gpu='git push upstream'
alias gpuu='git push --set-upstream upstream'
alias gr='git remote'
alias grv='git remote -v'
alias gra='git remote add'
alias grru='git remote rename origin upstream'
alias gs='git status -sb'
alias gt='git log --decorate --pretty=oneline'
alias lg='lazygit'

# pipx
alias pipx-export="pipx list | grep 'package' | sed -e 's/package \([^ ]*\) \([^,]*\),.*/\1==\2/' > /Users/will/pipx.requirements.txt && echo 'pipx packages exported to /Users/will/pipx.requirements.txt'"
alias pipx-import="cat pipx.requirements.txt | xargs pipx install"

# tmux
alias tm='tmux'
alias tmuxconf='${EDITOR} ~/.tmux.conf'

# vim
alias vimrc='${EDITOR} ~/.vimrc'
alias vimplugs='cd /Users/neon/.config/nvim/plugged'
alias n='nvim'
alias vi='nvim'
alias vim='nvim'
alias vimf='nvim $(fzf)'

# misc
alias cat='bat'
alias cl='clear'
alias duh='du -h -d 1'
alias x='exit'
alias rm='rm -i'
alias t='trash'
alias fdr='fd -Hip' # find with fd showing hidden files, ignoring case and displaying full path
alias ydl='cd ~/Downloads && yt-dlp'
alias ydl-audio='cd ~/Downloads && yt-dlp -x --embed-thumbnail'
alias defb='defaultbrowser'
alias screenshotlocation='defaults write com.apple.screencapture location ~/Pictures/Screenshots'
alias neofetch='neofetch --config ~/.neofetch'
alias sides='cd ~/sides'
alias work='cd ~/work'
alias displayman='display_manager.py'
alias spd='brews start spotifyd'
alias spdq='brews stop spotifyd'
alias sqlitebrowser='/Applications/DB\ Browser\ for\ SQLite.app/Contents/MacOS/DB\ Browser\ for\ SQLite'
alias yif='yarn install --frozen-lockfile'
alias pd='pushd'
alias qd='popd'
alias zel='zellij'
alias yif='yarn install --frozen-lockfile'
alias nc="open -a 'Nimble Commander'"
