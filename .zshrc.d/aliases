alias gitdiff="git diff --name-only | uniq | xargs code"
alias ydl='cd ~/Downloads && yt-dlp'
alias ydl-audio='cd ~/Downloads && yt-dlp -x --embed-thumbnail'
alias defb='defaultbrowser'
