tx () {
  tmux new -A -s "$1" "$1"
}

txx () {
  tmux new -A -s "$1"
}

hl () {
  ${@:2} | bat --paging=never -l $1
}

lk () {
  cd "$(walk "$@")"
}

setDarkAppearance () {
  defaults write $1 NSRequiresAquaSystemAppearance $2
  echo "set dark appearance for $1 to $2"
}

bcupinned () {
  bcu unpin $1 && bcu $1 && bcu pin $1
}
